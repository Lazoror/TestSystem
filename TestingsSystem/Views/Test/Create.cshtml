@model TestingsSystem.Models.Test



@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm())
{


    @Html.AntiForgeryToken()

    <div class="test-create" style="display: inline-block">
        <div class="container">
            <div class="col-md-12">

                <div class="controls text-center">

                    <h2>Create Test</h2>

                    @Html.TextBoxFor(model => Model.TestName, new { @class = "form-control", placeholder = "Test Name" })

                    @Html.TextBoxFor(model => Model.TestObject, new { @class = "form-control", placeholder = "Test Subject" })

                    @Html.TextBoxFor(model => Model.QuestionCount, new { @class = "form-control", placeholder = "Number of Questions" })

                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <input type="submit" class="btn btn-default" />
                </div>
            </div>

        </div>

    </div>



}